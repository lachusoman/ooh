{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "oOh Media Inventory Service",
    "description": "This service is used to the product management team maintain records of where physical display panels are installed in shopping centres ",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "x-access-token",
      "in": "header"
    }
  },
  "security": [
    {
      "JWT": []
    }
  ],
  "responses": {
    "UnauthorizedError": {
      "description": "Access token is missing or invalid"
    }
  },
  "host": "localhost:3003",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "oOh!Inventory",
      "description": "API for Product Management Team"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/user/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Login",
        "description": "Login Page",
        "operationId": "loginUser",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "email_id",
            "in": "body",
            "required": "true",
            "description": "Enter e-mail id & password"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": ["Users"],
        "summary": "Insert users into system",
        "description": "This can only be done by the logged in user.",
        "operationId": "insertUser",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter user"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/shop": {
      "post": {
        "tags": ["ShoppingCentres"],
        "summary": "Insert Shopping centre details into system",
        "description": "This can only be done by the logged in user.",
        "operationId": "insertShop",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter Shopping Centre details"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Shops"
            }
          }
        }
      }
    },
    "/asset": {
      "post": {
        "tags": ["Assets"],
        "summary": "Insert Asset details into system",
        "description": "This can only be done by the logged in user.",
        "operationId": "insertShop",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter Asset details"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Assets"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": ["email", "_id"],
      "properties": {
        "email_id": {
          "type": "string",
          "uniqueItems": true
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "user_type": {
          "type": "string",
          "uniqueItems": true
        },
        "dob": {
          "type": "date"
        },
        "address": {
          "type": "string"
        },
        "contact_no": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
}
