{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "oOh Media Inventory Service",
    "description": "This service is used to the product management team maintain records of where physical display panels are installed in shopping centres ",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "x-access-token",
      "in": "header"
    }
  },
  "security": [
    {
      "JWT": []
    }
  ],
  "responses": {
    "UnauthorizedError": {
      "description": "Access token is missing or invalid"
    }
  },
  "host": "localhost:3003",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "oOh!Inventory",
      "description": "API for Product Management Team"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/user/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Login",
        "description": "Login Page",
        "operationId": "loginUser",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "email_id",
            "in": "body",
            "required": "true",
            "description": "Enter e-mail id & password e.g. {\"email_id\":\"user@ooh.com\",\"password\":\"u123\"}",
            "default": "{}"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": ["Users"],
        "summary": "Insert users into system",
        "description": "This can only be done by the logged in user.",
        "operationId": "insertUser",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter Email_id,Password,First Name,Last Name,User Type('A' for ADMIN & 'U' for USER),Contact Number,DOB & Address \n e.g. {\"email_id\": \"user@ooh.com\",\"password\":\"u123\",\"first_name\":\"User\",\"last_name\":\"1\",\"user_type\": \"U\",\"contact_no\": \"+61000000000\",\"dob\":\"1970-01-01\",\"address\":\"Sydney,Australia\"}",
            "default": "{}"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/shop": {
      "post": {
        "tags": ["ShoppingCentres"],
        "summary": "Insert Shopping centre details into system",
        "description": "This can only be done by the logged in user.",
        "operationId": "insertShop",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter Shopping Centre Name & Address e.g. { \"name\":\"WestField\",\"address\":\"Parramatta\"}",
            "default": "{}"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Shops"
            }
          }
        }
      },
      "get": {
        "tags": ["ShoppingCentres"],
        "summary": "Get all Shopping Centres in system",
        "description": "This can only be done by the logged in user.",
        "operationId": "viewShops",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "required": "true",
            "description": "From Record",
            "default": "0"
          },
          {
            "name": "to",
            "in": "query",
            "required": "true",
            "description": "To Record",
            "default": "10"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Shops"
            }
          }
        }
      }
    },
    "/shop/{shop_id}": {
      "put": {
        "tags": ["Shopping Centre"],
        "summary": "Update Shopping Centres in system",
        "description": "This can only be done by the logged in user.",
        "operationId": "updateShops",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "shop_id",
            "in": "path",
            "required": "true",
            "description": "Enter Shopping Centre ID to be updated"
          },
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter Shopping Centre details to be updated e.g.{ \"name\":\"WestField\",\"address\":\"Town Hall\"} ",
            "default": "{}"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/asset": {
      "post": {
        "tags": ["Assets"],
        "summary": "Insert Asset details into system",
        "description": "This can only be done by the logged in user.",
        "operationId": "insertAsset",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter Asset Name,Dimension,Location,Status(A for Active & I for Inactive) and Associated ShoppingCentre ID \n e.g. {\"name\":\"Screen 1\",\"dimension\" : \"300 * 300\",\"location\": \"front\", \"status\" : \"active\", \"shoppingcentreId\":1 }",
            "default": "{}"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Assets"
            }
          }
        }
      },
      "get": {
        "tags": ["Assets"],
        "summary": "Get all Assets in system",
        "description": "This can only be done by the logged in user.",
        "operationId": "viewAssets",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "required": "true",
            "description": "From Record",
            "default": "0"
          },
          {
            "name": "to",
            "in": "query",
            "required": "true",
            "description": "To Record",
            "default": "10"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Assets"
            }
          }
        }
      }
    },
    "/asset/{asset_id}": {
      "put": {
        "tags": ["Asset"],
        "summary": "Update Assets in system",
        "description": "This can only be done by the logged in user.",
        "operationId": "updateShops",
        "produces": "application/xml,application/json",
        "parameters": [
          {
            "name": "asset_id",
            "in": "path",
            "required": "true",
            "description": "Enter Asset ID to be updated"
          },
          {
            "name": "body",
            "in": "body",
            "required": "true",
            "description": "Enter Asset Details to be updated e.g. {\"name\":\"Screen 1\",\"dimension\" : \"300 * 300\",\"location\": \"front\", \"status\" : \"active\", \"shoppingcentreId\":1 }",
            "default": "{}"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Assets"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": ["email", "_id"],
      "properties": {
        "email_id": {
          "type": "string",
          "uniqueItems": true
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "user_type": {
          "type": "string",
          "uniqueItems": true
        },
        "dob": {
          "type": "date"
        },
        "address": {
          "type": "string"
        },
        "contact_no": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
}
